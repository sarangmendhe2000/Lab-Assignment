package practice1_java;
import java.util.*;
public class pattern1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// now trying the patterns
		System.out.println("Enter the no of rows and columns");
		Scanner sc=new Scanner(System.in);
		int r=sc.nextInt();
		int c=sc.nextInt();
		
		// rectangle pattern
//		int arr[][]=new int[x][y];
		for(int i=0;i<r;i++) {
			for(int j=0;j<c;j++) {
				System.out.print("*");
			}
			System.out.println();
		}
		
		// hollow rectangle
		System.out.println("**********************");
		
		for(int i=0;i<r;i++) {
			for(int j=0;j<c;j++) {
				if(i==0 || j==0 || i==r ||j==c) {
				System.out.print("*");
				}
				else {
					System.out.print(" ");

				}
			}
			System.out.println();
		}
		
		
	}

}
