package practice1_java;
import java.util.*;
public class Array1 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Ente the size of array");
		int size = sc.nextInt();
		int arr[] = new int[size];  //declaring the array
		
		acceptData(arr);
		
		int sum = addData(arr);
		System.out.println("Addition of number are : " + sum);
		
		displayData(arr);

	}

	


	public static void acceptData(int arr[]) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter the numbers for addition");
		for(int i=0; i<arr.length; i++) {
			
			arr[i] = sc.nextInt();
		}
	}
	
	
	
	private static void displayData(int arr[]) {
		
		for(int i=0; i<arr.length;i++) {
			
			System.out.println( i + ":" + arr[i]);
		}
		
	}
	
	private static int addData(int arr[]) {
		int sum=0;
		
		for(int i=0; i<arr.length; i++) {
			sum = sum + arr[i];
		}
		return sum;
	}
}
