package com.demo.myStack;

public class StackArray {

	private int stack[];
	
	private int top;
	
	public StackArray()
	{
		stack= new int[10];
		top = -1;
	}
	
	public StackArray(int size)
	{
		stack = new int[size];
		top=-1;
	}
	
	
	public void push(int num)
	{
		if(!isFull())
		{
			top++;
			stack[top]= num;
		}
	}
	
	public boolean isFull()
	{
		return top == stack.length-1;
	}
	
	public boolean isEmpty()
	{
		return top == -1;
	}
	
	public int pop()
	{
		if(!isEmpty())
		{
			int temp = stack[top];
			top--;
			return temp;
		}
		else
		{
			System.out.println("Stack is Empty");
			return -1;
		}
	}
	
	public void display()
	{
		if(isEmpty())
		{
			System.out.println("Stack is Empty");
		}
		else if(isFull())
		{
			System.out.println("stack is Full");
		}
		else
		{
			for(int i=top;i>=0;i--)
			{
				System.out.println(stack[i]);
			}
		}
	}
	
	
}
