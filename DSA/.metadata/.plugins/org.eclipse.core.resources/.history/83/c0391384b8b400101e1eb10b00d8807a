package com.demo.beans;

import java.util.Arrays;

public class MyArray {
	
	private int [] arr;
	private int count;
	
	
	public MyArray()
	{
		arr= new int[6];
		count = 0;
	}
	
	
	public MyArray(int []arr , int count)
	{
		this.arr= arr;
		this.count = count;
		
		count = arr.length;
		
	}
	
	public MyArray(int size)
	{
		arr = new int[size];
		count = 0;
	}
	
	public int getCapacity()
	{
		return arr.length;
	}
	
	public int getSize()
	{
		return count;
	}
	
	
	
	//Add at the end 
	
	@Override
	public String toString() {
		return "MyArray " + Arrays.toString(arr);
	}


	public boolean add(int x)
	{
		if(count<arr.length)
		{
			arr[count]=x;
			count++;
			return true;
		}
	return false;
		
	}
	
	// Add at specific position
	
	
	public boolean addAtPos(int pos , int val)
	{
		if(count < arr.length && pos < count )
		{
			for(int i = count ; i>pos-1 ; i--)
			{
				arr[i]= arr[i-1];
			}
			
	// Adding value at specific position 
			
			arr[pos-1] = val;
			count++;
			
			return true;
		}
		return false;
	}
	
	
	//Delete By position
	
	public boolean deleteByPos(int pos)
	{
		if(pos < count)
		{
			for(int i=pos-1;i<=count-1;i++)
			{
				arr[i]= arr[i+1];
				
				
			}
			count--;
			return true;
		}
		return false;
	}
	
	//Search By Value
	
	public int searchByValue(int val)
	{
		for(int i=0;i<count;i++)
		{
			if(arr[i]==val)
			{
				System.out.println("Value found at position - " + (i+1));
				return (i+1);
			}
		}
		return -1;
	}
	
	//Delete first occurrence of the given value 
	
	public boolean deleteByValue(int val)
	{
		int id = searchByValue(val);
		if(id != -1)
		{
			deleteByPos(id);
			return true;
		}
		
		return false;
	}
	
	//Rotate Array if flag = true rotate right otherwise rotate left
	
	public void rotateArray(boolean flag , int val )
	{
		if(flag = true)
		{
			
		for(int i=0;i<val;i++)
		{
			int temp= arr[count-1];
			
			for(int j= count-1 ; j >0 ;j--)
			{
				arr[j]= arr[j-1];
			}
			
			arr[0]=temp;
		}
		}
		else
		{
			for(int i=0;i<val;i++)
			{
				int temp = arr[0];
				
				for(int j=1;j<count;j++)
				{
					arr[j-1]= arr[j];
				}
				
				arr[count - 1] = temp;
			}
		}
	}
	
}
