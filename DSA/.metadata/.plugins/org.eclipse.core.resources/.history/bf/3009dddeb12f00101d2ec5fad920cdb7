package com.demo.test;

import com.demo.beans.Employee;

public class singlyLinkedListEmployee {
	
		Node head;
		private Object temp;
		class Node{
			Employee data;
			Node next;
			
			public Node(Employee data) {
				super();
				this.data=data;
				this.next=null;
			}
		}
		//addNode method
			public void addNode(Employee ob) {
				Node newNode=new Node(ob);
				if(head == null) {
					head = newNode;
				}else {
					
					Node temp = head;
					while(temp.next != null) {
						temp = temp.next;
					}
					temp.next =newNode;
			}
			}
		
				 public void addNodeByEmpno(Employee ob,int empno) {p
				    	if(head==null)
				    		System.out.println("list is empty");
				    	else {
				    		Node newNode=new Node(ob);
				    		Node temp=head;
				    		while(temp.next!=null && temp.data.getEmpno()!=empno) {
				    			temp=temp.next;
				    		}
				    		if(temp.data.getEmpno()==empno) {
				    			newNode.next=temp.next;
				    			temp.next=newNode;
				    		}else {
				    			System.out.println("empno not found "+empno);
					}		
	    	}
		}
				public Employee deleteNodeByEmpno(int Empno) {
					if ( head==null) {
						System.out.println(" list is an empty ");
		
					}else {
						if(head.data.getEmpno()==Empno) {
							Node temp = head;
							head= temp.next;
							temp.next = null;
						}else {
							Node prev =null;
							Node temp = head;
							while(temp.next != null && temp.data.getEmpno()!= Empno) {
								prev = temp;
								temp= temp.next;
								
							}
							if(temp.data.getEmpno()==Empno) {
								prev.next = temp.next;
								temp.next = null;
								
							}else {
								System.out.println("number not found "+ Empno);
								return null;
								
							}
							
							
						}
					}
					return null;
				}
				 
				 
				 //display data
				 public void displayData() {
					 if(head != null) {
						 Node temp = head;
						 while(temp !=null) {
							 System.out.println(temp.data);
							 temp = temp.next;
						 }
						 
					 }
				 }
	}
