package com.demo.beans;

import java.util.Arrays;

public class MyArray {
	private int [] arr;
	private int count;
	
	//default constructor
	public MyArray() {
		super();
      arr= new int[10];
      count = 0;
	}
   //constructor for size
	public MyArray(int size) {
		//parent
		super();
		arr=new int[size];
	}

	//constructor array
	public MyArray(int[] arr) {
		super();
		this.arr=arr;
		count=arr.length;
	}
	
	//parameterized constructor
	public MyArray(int[] arr, int count) {
		super();
		this.arr = arr;
		this.count = count;
	}
	public void add(int x) {
		if(count<arr.length) {
			arr[count]=x;
			count ++;
		}
	}
	public int getLength() {
		return arr.length;
	}
	public int getsum() {
		int sum=0;
		for(int i=1;i<arr.length;i++) {
			sum=sum+arr[i];
		}
		return sum;
	}
	public void rotateArray(int n) {
	
		if(n>=arr.length) {
			System.out.println("rotation is not possible, n should be < "+arr.length);
		}else {
			
			for(int count=1;count<=n;count++) {
			
				int temp=arr[0];
		
				for(int i=1;i<arr.length;i++) {
					arr[i-1]=arr[i];
				}

				arr[arr.length-1]=temp;
				System.out.println("rotation---> "+count);
				System.out.println(Arrays.toString(arr));
			}
	
		}
	}
	
	public int rotateRight(int n) {
		if(n>count) {
			System.out.println(" rotation not possible");
		}
		
			for(int r=0;r<n;r++) {
				int temp= arr[count-1];
				
				for(int i= count-1; i>0;i--) {	
					arr[i]=arr[i-1];
				}
				arr[0]=temp;
			}
				System.out.println("rotation---> "+count);
				System.out.println(Arrays.toString(arr));
				return n;
				}
	
	          @Override
	          public String toString() {
		      return "MyArray [arr=" + Arrays.toString(arr) + "]";
	}
}
