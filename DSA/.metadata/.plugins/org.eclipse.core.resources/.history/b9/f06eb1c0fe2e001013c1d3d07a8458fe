package com.demo.beans;

public class SinglyLinkedList{
	//head: This is the name of the reference variable. 
	//It will hold the memory address of the first Node object in the list.
	Node head;
	class Node{
		int data;
		Node next;
		public Object node;
		//constructor to create new node
	   public Node(int val){
		   this.data=val;
		   this.next=null;   
		}
	}
	
	public SinglyLinkedList() {
		head= null;
		
	}
	public void addByPosition (int val,int pos) {
		if (head==null) {
		System.out.println("list is empty");
		
	}else {
		 Node newNode=new Node(val);
		 if(pos==1) {
			 newNode.next=head;
			 head = newNode;
			 
		 }else {
			 int count = 0;
			 Node temp = head;
			 
			 for( int i=0;temp.next!= null && i< pos-2;i++) {
				 temp = temp.next;
				 count++;
				 
			 }
			  System.out.println("count :"+ count);
			  if(count == pos-2) {
				  newNode.next = temp.next;
				  temp.next = newNode;
				  
			  }else {
				  System.out.println("position is out of bound" + pos);
			  }
		 } 
	}
		
	}
	    public void addByValue(int value,int num) {
		if(head==null) {
			System.out.println("list is empty");
		}else {
			
			Node newNode=new Node(value);
			Node temp=head;
		
			while(temp.next!=null && temp.data!=num ) {
				temp=temp.next;
			}

			if(temp.data==num) {
			  newNode.next=temp.next;
			  
			  temp.next=newNode;
			}else {
				System.out.println("num not found "+num);
			}
		}
	}
	    public void addNode(int val) {
	    	//create a new node value
	    	Node newNode = new Node(val);
	    if(head == null) {
	    	head = newNode;
	    }else {
	    	Node temp = head;
	    	while(temp.next!=null) {
	    		temp = temp.next;
	    	}
	    	temp.next=newNode;
	    }
}
	    
	 public void displayData() {   
		 Node temp =head;
		 while(temp!=null) {
			 System.out.println(temp.data+",");
			 temp=temp.next;
		 }
		 System.out.println();
	 }
	    
	    public int DeletebyPosition(int pos) {
		
	    	Node temp = head;
	    	if(pos==1) {
	    		temp.next=null;
	    		return temp.data;
	    	}else {
	    		Node prev = null;
	    		int count =0;
	    		for(int i=0;temp.next!=null && i<pos-1;i++) {
	    			prev = temp;
	    			temp=temp.next;
	    			count++;
	    		}
	    		if(count == pos-1) {
	    			prev.next = temp.next;
	    			temp.next = null;
	    			return temp.data;
	    		}else {
	    			System.out.println(" postition out of bound"+pos);
	    			return -1;
	    		}
	    	}
		}
	  
	    public void deleteByValue(int value) {
			Node temp = head;
			if(head.data == value) {
				head = temp.next;
				temp.next=null;
			}else {
				Node prev = null;
				while(temp.next != null && temp.data != value ) {
					prev = temp;
					temp = temp.next;
			}
				if(temp.data == value) {
					prev.next = temp.next;
					temp.next=null;
					
				}else {
					System.out.println("value is not found!");
					
				}
			}
	    }
}
